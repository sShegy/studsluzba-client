<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.raflab.studsluzba.client.controllers.PrijavljeniStudentiController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
            <children>
                <Button fx:id="btnNazad" mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: red;" text="Nazad" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Button>
            </children>
            <VBox.margin>
                <Insets left="20.0" top="10.0" />
            </VBox.margin>
        </HBox>

        <Label fx:id="lblNaslov" text="Prijavljeni studenti za ispit">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <TableView fx:id="tabelaPrijavljenih" prefHeight="400.0" prefWidth="760.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colIndeks" prefWidth="150.0" text="Broj Indeksa" />
                <TableColumn fx:id="colIme" prefWidth="250.0" text="Ime" />
                <TableColumn fx:id="colPrezime" prefWidth="250.0" text="Prezime" />
            </columns>
            <VBox.margin>
                <Insets left="20.0" right="20.0" />
            </VBox.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="200.0">
            <padding>
                <Insets right="20.0" bottom="20.0" />
            </padding>
        </HBox>
    </children>
</VBox>