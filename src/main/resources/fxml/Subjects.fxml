<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="900.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.raflab.studsluzba.client.controllers.SubjectsController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label text="Studijski Programi i Predmeti">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <SplitPane dividerPositions="0.3" VBox.vgrow="ALWAYS">
        <items>
            <!-- LEVA STRANA: STUDIJSKI PROGRAMI -->
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                <children>
                    <VBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding>
                        <children>
                            <Label text="Izaberi program:" textFill="#7f8c8d">
                                <font><Font name="System Bold" size="14.0" /></font>
                            </Label>
                            <ListView fx:id="programiList" VBox.vgrow="ALWAYS" />
                        </children>
                    </VBox>
                </children>
            </AnchorPane>

            <!-- DESNA STRANA: PREDMETI -->
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                <children>
                    <VBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </padding>
                        <children>
                            <Label text="Spisak predmeta:" textFill="#7f8c8d">
                                <font><Font name="System Bold" size="14.0" /></font>
                            </Label>
                            <TableView fx:id="predmetiTable" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colSifra" prefWidth="100.0" text="Å ifra" />
                                    <TableColumn fx:id="colNaziv" prefWidth="300.0" text="Naziv Predmeta" />
                                    <TableColumn fx:id="colEspb" prefWidth="75.0" text="ESPB" />
                                    <TableColumn fx:id="colSemestar" prefWidth="75.0" text="Semestar" />
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                </columnResizePolicy>
                            </TableView>
                        </children>
                    </VBox>
                </children>
            </AnchorPane>
        </items>
    </SplitPane>
</VBox>